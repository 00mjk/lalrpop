grammar {
    use util::tok::Tok;

    extern token {
        enum Tok {
            "(" => LParen,
            ")" => RParen,
            "-" => Minus,
            "+" => Plus,
            "*" => Times,
            "/" => Div,
        }
    }

    pub Expr: i32 = {
        <l:Expr> "-" <r:Factor> => l - r;
        <l:Expr> "+" <r:Factor> => l + r;
        Factor;
    };

    Factor = {
        <l:Factor> "*" <r:Term> => l * r;
        <l:Factor> "/" <r:Term> => l / r;
        Term;
    };

    Term = {
        <n:"Num"> => n.as_num();
        "(" <Expr> ")";
    };
}
